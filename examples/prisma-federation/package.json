{
  "$schema": "https://json.schemastore.org/package.json",
  "version": "2.7.5",
  "name": "@pothos-examples/prisma-federation",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "scripts": {
    "generate": "prisma generate",
    "seed": "prisma migrate reset -f",
    "start": "node -r @swc-node/register src/server.ts",
